<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.2);
        }
        h1 {
            color: #333;
            margin-bottom: 10px;
            font-size: 2em;
        }
        .subtitle {
            color: #666;
            margin-bottom: 30px;
            font-size: 1.1em;
        }
        .section {
            margin-bottom: 40px;
        }
        .section h2 {
            color: #667eea;
            border-bottom: 2px solid #667eea;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #667eea;
            color: white;
            font-weight: 600;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 600;
        }
        .badge-primary {
            background-color: #e3f2fd;
            color: #1976d2;
        }
        .badge-success {
            background-color: #e8f5e9;
            color: #388e3c;
        }
        .stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 8px;
            text-align: center;
        }
        .stat-card h3 {
            font-size: 2.5em;
            margin-bottom: 5px;
        }
        .stat-card p {
            font-size: 1em;
            opacity: 0.9;
        }
        .no-data {
            text-align: center;
            color: #999;
            padding: 40px;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üìö <%= title %></h1>
        <p class="subtitle">Sistema de Gerenciamento Escolar - Views EJS</p>
        
        <div class="stats">
            <div class="stat-card">
                <h3><%= alunos.length %></h3>
                <p>Alunos Cadastrados</p>
            </div>
            <div class="stat-card">
                <h3><%= turmas.length %></h3>
                <p>Turmas Ativas</p>
            </div>
        </div>

        <div class="section">
            <h2>üë®‚Äçüéì Alunos</h2>
            <% if (alunos.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Data Nascimento</th>
                            <th>Turma ID</th>
                            <th>Telefone</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% alunos.forEach(function(aluno) { %>
                            <tr>
                                <td><span class="badge badge-primary">#<%= aluno.id %></span></td>
                                <td><strong><%= aluno.nome %></strong></td>
                                <td><%= aluno.data_nascimento ? new Date(aluno.data_nascimento).toLocaleDateString('pt-BR') : 'N/A' %></td>
                                <td><%= aluno.turma_id || 'Sem turma' %></td>
                                <td><%= aluno.telefone_contato || 'N/A' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="no-data">Nenhum aluno cadastrado</div>
            <% } %>
        </div>

        <div class="section">
            <h2>üè´ Turmas</h2>
            <% if (turmas.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Ano Escolar</th>
                            <th>Turno</th>
                            <th>Sala</th>
                            <th>Capacidade</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% turmas.forEach(function(turma) { %>
                            <tr>
                                <td><span class="badge badge-success">#<%= turma.id %></span></td>
                                <td><strong><%= turma.nome %></strong></td>
                                <td><%= turma.ano_escolar || 'N/A' %></td>
                                <td><%= turma.turno || 'N/A' %></td>
                                <td><%= turma.sala || 'N/A' %></td>
                                <td><%= turma.capacidade_maxima || 'N/A' %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } else { %>
                <div class="no-data">Nenhuma turma cadastrada</div>
            <% } %>
        </div>
    </div>
</body>
</html>
